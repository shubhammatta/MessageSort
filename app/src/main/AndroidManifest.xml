<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shubhammatta.softwaretech" >

    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo1"
        android:label="@string/titleApp"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Choose From E-commerce websites:" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/titleApp" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".showMessage"
            android:label="@string/title_activity_show_message" >
        </activity>
        <activity
            android:name=".SortedSMS"
            android:label="@string/title_activity_sorted_sms" >
        </activity>
    </application>

</manifest>
