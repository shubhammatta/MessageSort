            android:layout_marginBottom="-8dp"
            android:background="@drawable/buttonlayout"
            android:textColor="@color/background_material_light"
            />
        <Button
            android:text="MYNTRA"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:id="@+id/myntra"
