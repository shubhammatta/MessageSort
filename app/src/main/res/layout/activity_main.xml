<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp" tools:context=".MainActivity">

        <Button
            android:text="message"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:id="@+id/message"
            android:onClick="ReadMessage"
            android:layout_marginBottom="-8dp"
            android:background="@drawable/buttonlayout"
            android:textColor="@color/background_material_light"
            />
        <Button
            android:text="AMAZON"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:id="@+id/amazon"
            android:layout_below="@+id/message"
            android:onClick="AmazonMessages"
            android:layout_marginBottom="-8dp"
            android:background="@drawable/buttonlayout"
            android:textColor="@color/background_material_light"
            />
        <Button
            android:text="FLIPKART"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:id="@+id/flipkart"
            android:layout_below="@+id/amazon"
            android:onClick="FlipkartMessages"
            android:layout_marginBottom="-8dp"
            android:background="@drawable/buttonlayout"
            android:textColor="@color/background_material_light"
            />
        <Button
            android:text="SNAPDEAL"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:id="@+id/snapdeal"
            android:layout_below="@+id/flipkart"
            android:onClick="SnapDealMessages"            android:layout_marginBottom="-14dp"
            android:background="@drawable/buttonlayout"
            android:textColor="@color/background_material_light"
            />
